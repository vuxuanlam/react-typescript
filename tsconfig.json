{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./src",
        "baseUrl": "./src",
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "./dist",
        "webpack.config.js"
    ]
}